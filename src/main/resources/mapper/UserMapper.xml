<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.csu.management.mapper.UserMapper">

    <select id="findUserByUsername" parameterType="String" resultType="org.csu.management.domain.User">
        select * from user where username = #{username}
    </select>

    <update id="updateUserByUsername" parameterType="org.csu.management.domain.User">
        update user set
        password=#{password},
        firstname=#{firstname},
        lastname=#{lastname},
        email=#{email},
        phone=#{phone},
        address1=#{address1},
        address2=#{address2},
        city=#{city},
        state=#{state},
        zip=#{zip},
        country=#{country},
        languagepre=#{languagepre},
        favoritecata=#{favoritecata},
        iflist=#{iflist},
        ifbanner=#{ifbanner}
        where username = #{username}
    </update>

    <select id="findUserByUsernameAndPassword" parameterType="org.csu.management.domain.User" resultType="org.csu.management.domain.User">
        select * from user where username = #{username} and password = #{password}
    </select>

    <insert id="insertUserByUsernameAndPassword" parameterType="org.csu.management.domain.User">
        insert into user (username,password,firstname,lastname,email,phone,address1,address2,city,state,zip,country,languagepre)
                    values (#{username},#{password},#{firstname},#{lastname},#{email},#{phone},#{address1},#{address2},#{city},#{state},#{zip},#{country},#{languagepre})
    </insert>

    <select id="searchUserList" resultType="org.csu.management.domain.User">
        select * from user
    </select>

</mapper>